<?xml version="1.0"?>
<launch>

  <!-- delete old parameters -->
  <!-- <rosparam command="delete" param="/move_base"/> -->

  <!--- Run move base -->
  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    <remap from="cmd_vel" to="/bender/nav/base/cmd_vel"/>
    <remap from="odom" to="/bender/nav/odom"/>
    <param name="controller_frequency" value="12"/>

    <param name="base_local_planner" value="dwa_local_planner/DWAPlannerROS" />

    <!--- load common configuration files -->
    <rosparam file="$(find bender_bringup)/params/navigation/costmap_common_local_nav.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find bender_bringup)/params/navigation/costmap_common_local_nav.yaml" command="load" ns="local_costmap" />

    <!--- load global navigation specific parameters -->
    <rosparam file="$(find bender_bringup)/params/local_navigation/local_costmap_params.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find bender_bringup)/params/local_navigation/global_costmap_params.yaml" command="load" ns="global_costmap" />

    <!--- load planner parameters -->
    <rosparam file="$(find bender_bringup)/params/navigation/dwa_local_planner_params.yaml" command="load" ns="DWAPlannerROS" />
  </node>

</launch>